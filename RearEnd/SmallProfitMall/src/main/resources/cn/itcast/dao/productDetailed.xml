    <!--根据id查询商品基础表跟价格表-->
    <select id="findByIdBasis" resultType="cn.itcast.domain.ProductDatails.ProductBasis">
        SELECT
        pb.*,
        pp.ProductInventory,pp.ProductPrice,pp.ProductSales,pp.SalesPrice,pp.SpikePrice

        FROM
            ProductBasis pb
        LEFT JOIN ProductPrice pp
            ON pb.ProductId = pp.ProductId
        WHERE pb.ProductId=#{ProductId}
</select>
    <!--根据商品id查询商品图片-->
    <select id="findByIdImage" resultType="java.lang.String" parameterType="INT">
        select ImageSite from ProductImage WHERE ProductId=#{ProductId}
    </select>
    <!--根据商品id查询商品规格-->
    <select id="findByIdSpecification" resultType="java.lang.String" parameterType="INT">
    select Specification from ProductSpecification WHERE ProductId=#{ProductId}
    </select>
    <!--根据商品id查询商品口味-->
    <select id="findByIdTaste" resultType="java.lang.String" parameterType="INT">
        select ProductTaste from ProductTaste WHERE ProductId=#{ProductId}
    </select>
    <!--根据商品id查询商品颜色-->
