<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.dao.ProductDao">

    <!--查询所有秒杀商品信息-->
    <select id="findSeckill" resultType="cn.itcast.domain.Seckill" parameterType="INT">
       SELECT * FROM Seckill limit #{StartingValue},#{Quantity}
    </select>

    <!--查询所有低价商品-->
    <select id="findProductLowPrice" resultType="cn.itcast.domain.ProductLowPrice" parameterType="INT">
        SELECT * from ProductLowPrice limit #{StartingValue},#{Quantity}
    </select>

    <!--查询所有广告-->
    <select id="findAd" resultType="cn.itcast.domain.Ad">
        SELECT * from ad
    </select>

    <select id="findRecommend" resultType="cn.itcast.domain.Recommend">
        select * from recommend
    </select>
</mapper>