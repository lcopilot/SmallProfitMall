<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.dao.HomepageDao">



    <select id="findRotationChart" resultType="cn.itcast.domain.homepag.RotationChart">
        SELECT * from RotationChart
    </select>


    <!--查询所有商品栏下分类-->
    <select id="findNavigation2" resultType="cn.itcast.domain.commodity.Classify">
        SELECT * from category
    </select>
    <!--查询所有广告-->
    <select id="findIcon" resultType="cn.itcast.domain.homepag.Icon">
        SELECT * from homepageIcon
    </select>

    <!--查询导航标题-->
    <select id="findNavigationClassify" resultType="cn.itcast.domain.homepag.NavigationClassify">
        SELECT * FROM navigation
    </select>

    <!--查询导航分类详细-->
    <select id="findNavigation" resultType="cn.itcast.domain.homepag.Navigation">
        SELECT * FROM navigation
    </select>

</mapper>