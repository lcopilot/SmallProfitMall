<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.dao.UserDao">
    <!-- 查询所有 -->
    <select id="findAll" resultType="cn.itcast.domain.user.User">
        select * from user;
    </select>

    <!-- 根据用户名查询用户信息 -->
    <select id="findByName" resultType="cn.itcast.domain.user.User">
         select * from user where name = #{name}
    </select>

    <!-- 根据用户手机号码查询用户 -->
    <select id="findByPhone" resultType="cn.itcast.domain.user.User">
         select * from user where  phone = #{phone}
    </select>

    <!-- 根据用户手机号码查询用户 -->
    <select id="findByUid" resultType="cn.itcast.domain.user.User">
         select * from user where  Uid = #{Uid}
    </select>


    <!--注册用户 -->
    <insert id="saveAccount" parameterType="cn.itcast.domain.user.User">
         INSERT INTO user (uid,name,password,sex,phone,email,image,token) VALUES (#{uid},#{name},#{password},#{sex},#{phone},#{email},#{image},#{token})
    </insert>

    <!-- 根据用户手机号码修改手机密码-->
    <update id="updatePasswordPhone" parameterType="java.lang.String">
        UPDATE user SET password = #{password} WHERE phone = #{phone}
    </update>

    <!--根据uid修改密码-->
    <update id="updatePasswordUid" parameterType="java.lang.String">
        UPDATE user SET password = #{password} WHERE uid = #{uid}
    </update>

    <!--根据uid修改用户头像-->
    <update id="updatePortrait" parameterType="java.lang.String">
        UPDATE user SET Image = #{Image} WHERE uid = #{uid}
    </update>

    <!--根据id查询头像-->
    <select id="findByIdInformation" resultType="cn.itcast.domain.user.User" parameterType="java.lang.String">
      select name,birthday,sex,phone,email,Image FROM user WHERE uid=#{uid}
    </select>

    <!---->
</mapper>