<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.itcast.dao.EvaluationDao">
    <!--添加收藏-->
    <insert id="addEvaluation" parameterType="cn.itcast.domain.Evaluation.Evaluation">
    INSERT
    INTO
    userEvaluation
    (userId,productId,sign,evaluationTime)
    VALUES
    (#{userId},#{productId},#{sign},#{evaluationTime})

    </insert>
    <select id="fendEvaluation" resultType="cn.itcast.domain.Evaluation.Evaluation">
         SELECT * FROM userEvaluation where productId = #{productId} AND userId = #{userId}
    </select>
</mapper>