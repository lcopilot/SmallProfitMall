    <select id="fendNews" resultType="cn.itcast.domain.news.News">
        SELECT
             un.* ,nc.newsTime,nc.newsContent,nc.newsType,nc.contentId,nc.code,nc.sign,nc.title
        FROM
            userNews un
        LEFT JOIN
            newsContent nc
        ON
            un.newsId=nc.newsId
        WHERE
            un.userId=#{userId}
        order by
          nc.contentId
        desc
            limit #{currentPage},#{pageSize}
    </select>

    <select id="fendTotal" resultType="java.lang.Integer">
        select count(*) FROM newsContent WHERE userId=#{userId}
    </select>
