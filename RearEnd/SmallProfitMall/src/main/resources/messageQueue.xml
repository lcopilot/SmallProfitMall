<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:rabbit="http://www.springframework.org/schema/rabbit"
       xsi:schemaLocation="http://www.springframework.org/schema/rabbit
	http://www.springframework.org/schema/rabbit/spring-rabbit-1.4.xsd
	http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

  <!--生产者者配置如下：-->
  <!-- 定义RabbitMQ的连接工厂 -->
  <rabbit:connection-factory id="connectionFactory"
                             host="${rabbitmq.host}" port="${rabbitmq.port}" username="${rabbitmq.username}"
                             password="${rabbitmq.password}" virtual-host="${rabbitmq.vhost}"/>
  <!-- 管理消息队列 -->
  <rabbit:admin connection-factory="connectionFactory"/>

  <!-- 定义交换机 自动声明-->
  <rabbit:direct-exchange name="EMAIL-EXCHANGE" auto-declare="true" durable="true"/>

  <!-- 定义MQ消息模板 -->
  <rabbit:template id="rabbitTemplate"
                   connection-factory="connectionFactory" exchange="EMAIL-EXCHANGE"/>

  <!-- 定义收藏交换机 自动声明-->
  <rabbit:direct-exchange name="FAVORITE-EXCHANGE" auto-declare="true" durable="true"/>

  <!-- 定义收藏MQ消息模板 -->
  <rabbit:template id="favoriteTemplate"
                   connection-factory="connectionFactory" exchange="FAVORITE-EXCHANGE"/>

  <!--定义商品交换机自动声明-->
  <rabbit:direct-exchange name="SHOPPING-EXCHANGE" auto-declare="true" durable="true"/>

  <!-- 定义商品消息模板 -->
  <rabbit:template id="shoppingTemplate"
                   connection-factory="connectionFactory" exchange="SHOPPING-EXCHANGE"/>

  <!-- 监听邮件队列 -->
  <rabbit:listener-container connection-factory="connectionFactory">
    <rabbit:listener ref="mQSimpleMsgHandler" method="execute" queue-names="EMAIL-QUEUE"/>
  </rabbit:listener-container>

  <!--监听队列 （测试）-->
  <rabbit:listener-container connection-factory="connectionFactory">
    <rabbit:listener ref="sms" method="sms" queue-names="SMS-QUEUE"/>
  </rabbit:listener-container>

  <!--监听收藏队列-->
  <rabbit:listener-container connection-factory="connectionFactory">
    <rabbit:listener ref="favorite" method="addEvaluation" queue-names="FAVORITE-QUEUE"/>
  </rabbit:listener-container>

  <!--监听到货通知队列-->
  <rabbit:listener-container connection-factory="connectionFactory">
    <rabbit:listener ref="arrivalNotification" method="arrivalNotification" queue-names="ARRIVAL-NOTIFICATION-QUEUE"/>
  </rabbit:listener-container>

  <!--监听确认订单队列-->
  <rabbit:listener-container connection-factory="connectionFactory">
    <rabbit:listener ref="orderPayment" method="orderPayment" queue-names="SHOPPING-NOTIFICATION-QUEUE"/>
  </rabbit:listener-container>

  <!--监听推送消息队列-->
  <rabbit:listener-container connection-factory="connectionFactory">
    <rabbit:listener ref="orderPushNews" method="orderPushNews" queue-names="SHOPPING-NOTIFICATION-QUEUE"/>
  </rabbit:listener-container>

  <!-- 声明多个消费者对象 -->
  <bean id="mQSimpleMsgHandler" class="cn.itcast.util.rabbitMq.MQSimpleMsgHandler"/>
  <!--测试-->
  <bean id="sms" class="cn.itcast.Test.mq.sms"/>
  <!--声明收藏消费者-->
  <bean id="favorite" class="cn.itcast.messageQueue.consumer.favorite.FavoriteConsumer"></bean>
  <!--声明商品到货通知消费者-->
  <bean id="arrivalNotification" class="cn.itcast.messageQueue.consumer.shopping.ArrivalNotification"></bean>
  <!--订单确认通知-->
  <bean id="orderPayment" class="cn.itcast.messageQueue.consumer.order.OrderPayment"></bean>
  <!--订单付款成功消息推送-->
  <bean id="orderPushNews" class="cn.itcast.messageQueue.consumer.order.OrderPushNews"></bean>

</beans>
